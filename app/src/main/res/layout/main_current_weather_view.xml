<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtview_location"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="19sp"
            tools:text="Nairobi,KE" />

        <TextView
            android:id="@+id/textview_last_updated"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:gravity="center_vertical|right"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:text="updated 10 mins ago" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtview_temperature"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:textSize="60sp"
            tools:text="23°C" />

        <local.openweather.model.ClimaconsTextView
            android:id="@+id/weather_icon"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:textSize="90sp"
            tools:text="I" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_decription"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="Sunny" />

        <TextView
            android:id="@+id/wind_values"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="7 mph NE" />

        <TextView
            android:id="@+id/current_temperature"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="17°C - 27°C" />
    </LinearLayout>

</LinearLayout>